<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>EmployeeManager</display-name>

    <!-- Servlet Mapping for viewEmployeeServlet -->
    <servlet>
        <servlet-name>ViewEmployeeServlet</servlet-name>
        <servlet-class>controller.viewEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewEmployeeServlet</servlet-name>
        <url-pattern>/viewEmployee</url-pattern> <!-- Change the URL pattern to avoid conflicts -->
    </servlet-mapping>

    <!-- Servlet Mapping for addEmployeeServlet -->
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>controller.addEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/addEmployee</url-pattern> <!-- Change the URL pattern to avoid conflicts -->
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.htm</welcome-file>
    </welcome-file-list>
</web-app>
